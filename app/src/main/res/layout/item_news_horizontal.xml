<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_ad_card1"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:background="@drawable/ad_image1_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_ad_card2"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:background="@drawable/ad_image1_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_cart"
        android:layout_width="220dp"
        android:layout_height="146dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ad_image1_3"
        app:layout_constraintEnd_toEndOf="@+id/image_view_ad_card2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_ad"
        android:layout_width="316dp"
        android:layout_height="62dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Новое поступление товаров SONY"
        android:textColor="#2E3C85"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>